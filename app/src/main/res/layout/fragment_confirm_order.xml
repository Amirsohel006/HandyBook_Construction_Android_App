<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.addressactivity.ConfirmOrderFragment">

        <TextView
            style="@style/txtpoppinsregular20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery to" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/iv_location_image"
                    app:shapeAppearance="@style/RoundedImageView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/tvLocationName"
                        style="@style/txtpoppinmedium14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="4dp"
                        android:padding="2dp"
                        android:text="SGS PG , 2nd stage, JP Nagar, Bangalore. "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvLocationUserName"
                        style="@style/txtpoppinmedium14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="4dp"
                        android:padding="2dp"
                        android:text="Arun B"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvLocationContactNumber"
                        style="@style/txtpoppinmedium14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="4dp"
                        android:padding="2dp"
                        android:text="9487349483"
                        android:textColor="@color/black" />


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/txtpoppinsregular20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery to" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvConfirmCartOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <TextView
            style="@style/txtpoppinsregular20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Price Details" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvProductTotalItemDetails"
                style="@style/txtpoppinmedium12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:alpha=".7"
                android:text="Price (2 Item)"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvProductTotalItemPrice"
                style="@style/txtpoppinmedium12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:alpha=".7"
                android:gravity="end"
                android:text="Price (2 Item)"
                android:textColor="@color/black" />

        </LinearLayout>

        <Button
            android:id="@+id/btChoosePayment"
            style="@style/txtbuttonpoppinsmidum20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/button_rectangle"
            android:text="Choose Payment" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>