<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivShowRoomItemImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/furniture_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvShowRoomItemName"
            style="@style/txtpoppinsemibold14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sofa Set" />

        <ImageView
            android:id="@+id/ivShowRoomFavlorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorites"
            android:layout_weight=".5"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvShowRoomItemCategory"
        style="@style/txtpoppinregular12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comfortable Sofa set"
        android:textColor="@color/black"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvShowRoomItemOriginalPrice"
            style="@style/txtpoppinregular12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₹22000"
            android:padding="2dp"
            android:layout_weight="1"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvShowRoomItemCurrentPrice"
            style="@style/txtpoppinregular12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₹ 20000"
            android:padding="2dp"
            android:layout_weight="1"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvShowRoomItemDiscount"
            style="@style/txtpoppinregular12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 % OFF"
            android:padding="2dp"
            android:layout_weight="1"
            android:textColor="@color/orange"/>


    </LinearLayout>



</LinearLayout>