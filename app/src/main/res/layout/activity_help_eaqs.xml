<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.helpeaqsactivity.HelpEAQsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_for_toolbar">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_width="34dp"
            android:layout_height="34dp"/>


        <TextView
            style="@style/txtpoppinsregular20"
            android:layout_marginStart="40dp"
            android:text="Find Professionals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#0F365F">



        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            style="@style/txtpoppinsemibold18"
            android:id="@+id/textview"
            android:text="Find the Answers You Need"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_below="@+id/linearRowsettings"
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Search..."
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/search_bar_background"
            android:padding="10dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_margin="12dp"
        style="@style/txtpoppinsemibold18"
        android:textColor="@color/black"
        android:text="Frequently Asked Questions"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFrequentlyAskedQuestions"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"

        style="@style/txtpoppinsregular20"
        android:textColor="@color/puple_900"
        android:text="Got any  other queries ?"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        style="@style/txtpoppinmedium16"
        android:textColor="@color/puple_900"
        android:text="Helpline Number -"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        style="@style/txtpoppinmedium16"
        android:textColor="@color/yellow"
        android:text="091 - 88484789"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        style="@style/txtpoppinmedium16"
        android:textColor="@color/puple_900"
        android:text="Mail ID -"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        style="@style/txtpoppinmedium16"
        android:textColor="@color/yellow"
        android:text="qecuries@gmail.com"/>
    </LinearLayout>


</LinearLayout>