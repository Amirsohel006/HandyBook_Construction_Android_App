<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFurnitureCancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            android:src="@drawable/icon_cancel" />

        <TextView
            style="@style/txtpoppinmedium14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="Products Category"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvFurnitureDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="4dp"
            android:text="Done"
            android:textColor="@color/blue" />

    </LinearLayout>

    <View
        style="@style/Divider.Horizontal"
        android:background="@color/grey" />

    <TextView
        style="@style/txtpoppinregular12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:text="Furniture"
        android:textColor="@color/black" />

    <TextView
        style="@style/txtpoppinregular12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:text="Electroics"
        android:textColor="@color/black" />

    <TextView
        style="@style/txtpoppinregular12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:text="Tiles"
        android:textColor="@color/black" />

    <TextView
        style="@style/txtpoppinregular12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:padding="4dp"
        android:text="Plumbing Supplies"
        android:textColor="@color/black" />
</LinearLayout>