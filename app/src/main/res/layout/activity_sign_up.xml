<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.signupactivity.SignUpActivity">


    <TextView
        android:id="@+id/sign_uptext"
        style="@style/txtpoppinsemibold28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="Sign Up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/create_txt"
        style="@style/txtpoppinmeium18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_uptext"
        android:layout_marginTop="16dp"

        android:text="Create Account"
        app:layout_constraintStart_toStartOf="@+id/sign_uptext"
        app:layout_constraintTop_toBottomOf="@+id/sign_uptext" />


    <EditText
        android:id="@+id/etname"
        style="@style/groupStylecornerRadius_3"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="First Name"
        app:layout_constraintStart_toStartOf="@+id/create_txt"
        app:layout_constraintTop_toBottomOf="@+id/create_txt" />

    <EditText
        android:id="@+id/lastName"
        style="@style/groupStylecornerRadius_3"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        app:layout_constraintBottom_toBottomOf="@+id/etname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etname"
        app:layout_constraintTop_toTopOf="@+id/etname" />


    <EditText
        android:id="@+id/etemail"
        style="@style/groupStylecornerRadius_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Enter your email"
        app:layout_constraintEnd_toEndOf="@+id/lastName"
        app:layout_constraintStart_toStartOf="@+id/etname"
        app:layout_constraintTop_toBottomOf="@+id/etname" />


    <EditText
        android:id="@+id/etPhone"
        style="@style/groupStylecornerRadius_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etemail"
        android:layout_marginTop="24dp"

        android:hint="Phone NUmber"
        app:layout_constraintEnd_toEndOf="@+id/etemail"
        app:layout_constraintStart_toStartOf="@+id/etemail"
        app:layout_constraintTop_toBottomOf="@+id/etemail" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginButton"
        style="@style/txtbuttonpoppinsmidum20"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_below="@+id/etPhone"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="Signup"
        app:layout_constraintEnd_toEndOf="@+id/etPhone"
        app:layout_constraintStart_toStartOf="@+id/etPhone"
        app:layout_constraintTop_toBottomOf="@+id/etPhone" />


    <TextView
        android:id="@+id/signuptxt"
        style="@style/txtpoppinregular12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_marginTop="32dp"
        android:padding="12dp"
        android:text="Already Registered?     Login"
        app:layout_constraintEnd_toEndOf="@+id/loginButton"
        app:layout_constraintStart_toStartOf="@+id/loginButton"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_google_logo"
        app:layout_constraintStart_toStartOf="@+id/signuptxt"
        app:layout_constraintTop_toBottomOf="@+id/signuptxt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_facebook_logo"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/signuptxt"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />



    </androidx.constraintlayout.widget.ConstraintLayout>
