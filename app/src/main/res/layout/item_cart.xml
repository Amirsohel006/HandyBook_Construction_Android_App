<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivOrderImage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/iv_book"
                app:shapeAppearance="@style/RoundedImageView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvBookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txtpoppinsemibold16"
                    android:padding="2dp"
                    android:text="Civil Book"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tvBookQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txtpoppinmedium12"
                    android:text="Qty : 100"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/tvBookPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txtpoppinsregular16"
                    android:text="â‚¹ 2900"
                    android:padding="2dp"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@android:style/Widget.Holo.RatingBar.Small"
                    android:backgroundTint="@color/white"
                    android:isIndicator="false"
                    android:layout_weight="1"
                    android:progressTint="@color/yellow"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:rating="3.5" />
                    <TextView
                        android:id="@+id/tvRatingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/txtpoppinsregular121"
                        android:text="3.5"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/orange"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_rectangle_cart"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_decrement"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:text="-"
                            android:textColor="@android:color/white"
                           />

                        <TextView
                            android:id="@+id/textview_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_weight="1"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_gravity="center"/>

                        <Button
                            android:id="@+id/button_increment"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="+"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:textColor="@android:color/white"
                           />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>