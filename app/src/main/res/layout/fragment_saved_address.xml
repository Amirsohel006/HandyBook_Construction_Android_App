<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.address.change_address.SavedAddressFragment">


        <TextView
            style="@style/txtpoppinsregular20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp"
            android:text="Saved Address" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSavedAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:nestedScrollingEnabled="false" />

        <LinearLayout
            android:id="@+id/btAddNewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/outlined_edittext"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_add"
                android:tint="@color/grey_400" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Address"
                android:textColor="@color/grey_400"
                android:textSize="18sp" />


        </LinearLayout>

        <Button
            android:id="@+id/btSavedAddress"
            style="@style/txtbuttonpoppinsmidum20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:background="@drawable/button_rectangle"
            android:text="Proceed" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>