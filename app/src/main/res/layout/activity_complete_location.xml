<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_for_toolbar">

        <ImageView
            android:id="@+id/ivLocationBack"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/icon_cancel"
            android:layout_width="34dp"
            android:layout_height="34dp"/>


        <TextView
            style="@style/txtpoppinsregular20"
            android:layout_marginStart="30dp"
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:text="Reset"
            style="@style/txtpoppinsregular16"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:id="@+id/idforvertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search Location" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonApply"
            style="@style/txtbuttonpoppinsmidum20"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply" />


    </LinearLayout>
</LinearLayout>